  </footer>  <script>
    function demoReply() {
      const userInput = document.getElementById('userQuery').value.trim();
      const responseBox = document.getElementById('pateResponse');
      if (userInput === '') {
        responseBox.innerHTML = "Please type a question.";
      } else {
        responseBox.innerHTML = "Pate: This is how I would respond to \"" + userInput + "\" – in the real version, this will be a smart, contextual answer!";
      }
      responseBox.style.display = 'block';
    }
  </script></body>
